{
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "python": "zsh -c 'set -a && source $workspaceRoot/.env && exec $workspaceRoot/.venv/bin/python -u $fullFileName'"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.vscode": true,
    "**/__pycache__": true,
    "**/output": true,
    "**/log": true,
    "**/.venv/**": true,
    ".shortcuts/**": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    ".shortcuts/**": true
  },
  "python.analysis.exclude": [
    "**/.git",
    "**/.vscode",
    "**/__pycache__",
    "**/output",
    "**/log",
    "**/.venv",
    "**/.shortcuts"
  ],
  "python.analysis.extraPaths": ["./modules/sjpy"],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.envFile": "${workspaceFolder}/.env",
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  // Editor
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "editor.fontFamily": "JetBrains Mono, D2Coding",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.letterSpacing": 0,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "terminal.integrated.fontFamily": "JetBrains Mono, D2Coding",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  // Formatter
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": false
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[env]": {
    "editor.defaultFormatter": "dotenv.dotenv-vscode"
  },
  "files.associations": {
    ".env": "env",
    ".env.*": "env"
  },
  "[toml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": [
    "esic",
    "Huggingface",
    "Libri",
    "LIBRISPEECH",
    "ndarray",
    "sjpy",
    "Tedlium"
  ]
}
